{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "jsx": "react-native",
    "module": "es2015",
    "moduleResolution": "node",
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "sourceMap": true,
    "target": "esnext",
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./app/*"],
      "assets/*": ["./assets/*"]
    },
    "typeRoots": ["./node_modules/@types", "./types"]
  },
  "extends": "@react-native/typescript-config/tsconfig.json",
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "include": [
    "app.config.ts",
    "**/*.ts",
    "**/*.tsx",
    "app/screens/app/Home.Screentsx"
  ],
  "exclude": ["node_modules", "test/**/*"]
}
